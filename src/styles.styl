/* You can add global styles to this file, and also import other style files */
@import "bootstrap.styl"

#app
  background-color: transparent

gradientBackground()
  background rgb(252,234,187)
  background -moz-linear-gradient(-45deg, rgb(252,234,187) 0%, rgb(252,205,77) 19%, rgb(248,181,0) 69%, rgb(251,223,147) 100%)
  background -webkit-gradient(left top, right bottom, color-stop(0%, rgb(252,234,187)), color-stop(19%, rgb(252,205,77)), color-stop(69%, rgb(248,181,0)), color-stop(100%, rgb(251,223,147)))
  background -webkit-linear-gradient(-45deg, rgb(252,234,187) 0%, rgb(252,205,77) 19%, rgb(248,181,0) 69%, rgb(251,223,147) 100%)
  background -o-linear-gradient(-45deg, rgb(252,234,187) 0%, rgb(252,205,77) 19%, rgb(248,181,0) 69%, rgb(251,223,147) 100%)
  background -ms-linear-gradient(-45deg, rgb(252,234,187) 0%, rgb(252,205,77) 19%, rgb(248,181,0) 69%, rgb(251,223,147) 100%)
  background linear-gradient(135deg, rgb(252,234,187) 0%, rgb(252,205,77) 19%, rgb(248,181,0) 69%, rgb(251,223,147) 100%)

fullHeightWidth()
  height 100%
  width 100%
  margin 0

body, #app
  gradientBackground()
  fullHeightWidth()

.clickable
  cursor pointer